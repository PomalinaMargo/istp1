@model LibraryDomain.Model.Book

@{
    ViewData["Title"] = "Створити";
}

<h1>Створити книгу</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" style="color: black;" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Genreid" class="control-label"></label>
                <select asp-for="Genreid" class="form-control" asp-items="ViewBag.Genreid" style="color: black;"></select>
            </div>
            <div class="form-group">
                <label asp-for="Authorid" class="control-label"></label>
                <select asp-for="Authorid" class="form-control" asp-items="ViewBag.Authorid" style="color: black;"></select>
            </div>
            <div class="form-group">
                <label asp-for="NumberOfPages" class="control-label"></label>
                <input asp-for="NumberOfPages" class="form-control" style="color: black;" />
                <span asp-validation-for="NumberOfPages" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" style="color: black;" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Administratorid" class="control-label"></label>
                <select asp-for="Administratorid" class="form-control" asp-items="ViewBag.Administratorid" style="color: black;"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Створити" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Повернутися назад</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

